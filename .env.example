# =============================================================================
# RiskShield AI - Environment Configuration
# =============================================================================
# Copy this file to .env.local for development or set these in your deployment
# platform (Vercel, Railway, etc.) for production.
# =============================================================================

# -----------------------------------------------------------------------------
# Core Application
# -----------------------------------------------------------------------------

# App URL - Used for generating links in emails and redirects
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Authentication (REQUIRED in production)
# -----------------------------------------------------------------------------

# JWT Secret - MUST be at least 32 characters
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Never use the default value in production!
JWT_SECRET=your-secure-random-secret-min-32-chars

# -----------------------------------------------------------------------------
# Supabase (REQUIRED)
# -----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# -----------------------------------------------------------------------------
# Convex (REQUIRED)
# -----------------------------------------------------------------------------
# Get this from: https://dashboard.convex.dev

NEXT_PUBLIC_CONVEX_URL=

# -----------------------------------------------------------------------------
# OpenAI (REQUIRED for AI document verification)
# -----------------------------------------------------------------------------
# Get this from: https://platform.openai.com/api-keys

OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Email - Resend (Optional, but recommended for production)
# -----------------------------------------------------------------------------
# Get these from: https://resend.com/api-keys

RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@riskshield.ai
RESEND_FROM_NAME=RiskShield AI

# -----------------------------------------------------------------------------
# SMS - Twilio (Optional, for SMS notifications)
# -----------------------------------------------------------------------------
# Get these from: https://www.twilio.com/console

TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# OAuth Integrations (Optional)
# -----------------------------------------------------------------------------
# These enable Google Workspace and Microsoft 365 email integrations

# Google OAuth
# Set up at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Microsoft OAuth
# Set up at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=

# Google Gemini AI (for document extraction)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# -----------------------------------------------------------------------------
# Procore Integration (Optional)
# -----------------------------------------------------------------------------
# Enables syncing projects/vendors from Procore and pushing compliance status back
# Set up at: https://developers.procore.com/documentation/app-management
# Redirect URI: {APP_URL}/api/integrations/procore/callback

# Set to 'true' for sandbox testing, 'false' for production
PROCORE_SANDBOX=false

# OAuth credentials from Procore developer portal
PROCORE_CLIENT_ID=
PROCORE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Stripe Billing (Optional)
# -----------------------------------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys

STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs (create in Stripe Dashboard â†’ Products)
STRIPE_PRICE_ID_STARTER=
STRIPE_PRICE_ID_PROFESSIONAL=
STRIPE_PRICE_ID_ENTERPRISE=
